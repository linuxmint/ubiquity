#!/bin/sh

. /usr/share/debconf/confmodule

dev=$1
id=$2
part=$dev/$id
filesystem=$(cat $part/acting_filesystem)

cd $dev

options=''
for op in $(cat /lib/partman/mountoptions/$filesystem); do
	if [ -f $part/options/$op ]; then
		options="${options:+$options,}$op"
	fi
done
if [ -z "$options" ]; then
	options=defaults
fi

echo $options
